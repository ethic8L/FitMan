<h1 class="text-3xl font-extrabold mb-6 text-center text-indigo-600">
  Nowy trening
</h1>
<form action="/new" method="POST" class="space-y-6 bg-white p-8 rounded-xl shadow-lg max-w-md mx-auto">
  <input 
    name="type" 
    placeholder="Typ treningu" 
    required
    class="w-full px-4 py-3 border border-gray-300 rounded-lg 
           focus:outline-none focus:ring-4 focus:ring-indigo-400 
           transition duration-300 ease-in-out"
  >
  
  <select 
    name="intensity" 
    required
    class="w-full px-4 py-3 border border-gray-300 rounded-lg 
           focus:outline-none focus:ring-4 focus:ring-indigo-400 
           transition duration-300 ease-in-out"
  >
    <option value="" disabled selected>Wybierz intensywność</option>
    <option value="niska">Niska</option>
    <option value="średnia">Średnia</option>
    <option value="wysoka">Wysoka</option>
  </select>
  
  <input 
    type="number" 
    name="duration" 
    placeholder="Czas trwania (min)" 
    required 
    min="1"
    class="w-full px-4 py-3 border border-gray-300 rounded-lg 
           focus:outline-none focus:ring-4 focus:ring-indigo-400 
           transition duration-300 ease-in-out"
  >
  
  <button 
    type="submit" 
    class="w-full bg-indigo-600 hover:bg-indigo-700 active:scale-95 
           text-white font-semibold py-3 rounded-lg shadow-lg 
           transition-transform duration-150"
  >
    Zapisz
  </button>
</form>
